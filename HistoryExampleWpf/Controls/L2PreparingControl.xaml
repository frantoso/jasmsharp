<UserControl x:Class="HistoryExampleWpf.Controls.L2PreparingControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:controls="clr-namespace:HistoryExampleWpf.Controls"
             xmlns:historyExample="clr-namespace:HistoryExampleWpf"
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
            <Viewbox Stretch="Uniform">
      <Grid DataContext="{Binding L2Preparing, Source= {x:Static historyExample:App.ViewModel}}">
        <Canvas Background="White" Height="180" Width="270">
          <controls:QArrow Canvas.Left="70" Canvas.Top="0" X1="0" Y1="20" X2="45" Y2="4" X3="90"
              Y3="20" />
          <controls:InitialState Canvas.Left="60" Canvas.Top="10" Width="20" Height="20"
              CurrentState="{Binding CurrentState}" />
          <controls:State Canvas.Left="160" Canvas.Top="10" CurrentState="{Binding CurrentState}"
              Id="L3-P1" DisplayName="L3-P1" />
          <controls:Arrow Canvas.Left="210" Canvas.Top="50" X1="0" Y1="0" X2="0" Y2="20" />
          <controls:State Canvas.Left="160" Canvas.Top="70" CurrentState="{Binding CurrentState}"
              Id="L3-P2" DisplayName="L3-P2" />
          <controls:Arrow Canvas.Left="110" Canvas.Top="90" X1="50" Y1="0" X2="0" Y2="0" />
          <controls:State Canvas.Left="10" Canvas.Top="70" CurrentState="{Binding CurrentState}"
              Id="L3-P3" DisplayName="L3-P3" />
          <controls:Arrow Canvas.Left="60" Canvas.Top="110" X1="0" Y1="0" X2="0" Y2="20" />
          <controls:State Canvas.Left="10" Canvas.Top="130" CurrentState="{Binding CurrentState}"
              Id="L3-P4" DisplayName="L3-P4" />
          <controls:QArrow Canvas.Left="110" Canvas.Top="150" X1="0" Y1="0" X2="30" Y2="0" X3="80"
              Y3="10" />
          <controls:FinalState Canvas.Left="189" Canvas.Top="151" Width="20" Height="20"
              CurrentState="{Binding CurrentState}" />
          <TextBlock Canvas.Left="200" Canvas.Top="50" Text="N" />
          <TextBlock Canvas.Left="130" Canvas.Top="76" Text="N" />
          <TextBlock Canvas.Left="50" Canvas.Top="110" Text="N" />
          <TextBlock Canvas.Left="140" Canvas.Top="138" Text="N" />
        </Canvas>
        <Rectangle Fill="LightGray" Opacity="0.6"
            Visibility="{Binding IsInactive, Converter={StaticResource B2VConverter}}" />
      </Grid>
    </Viewbox>

    </Grid>
</UserControl>
