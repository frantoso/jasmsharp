<Application x:Class="HistoryExampleWpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:HistoryExampleWpf.Controls"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <Style TargetType="controls:State">
            <Setter Property="Height" Value="40" />
            <Setter Property="Width" Value="100" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Background" Value="AntiqueWhite" />
            <Setter Property="SelectedBackground" Value="MistyRose" />
        </Style>

        <Style x:Key="ArrowStyle" TargetType="controls:Arrow">
            <Setter Property="Stroke" Value="Gray" />
            <Setter Property="StrokeThickness" Value="1" />
            <Setter Property="HeadWidth" Value="6" />
            <Setter Property="HeadHeight" Value="3" />
        </Style>

        <Style TargetType="controls:Arrow" BasedOn="{StaticResource ArrowStyle}" />

        <Style TargetType="controls:QArrow" BasedOn="{StaticResource ArrowStyle}" />

        <Style TargetType="controls:CArrow" BasedOn="{StaticResource ArrowStyle}" />

        <Style x:Key="HistoryStyle" TargetType="Border">
            <Setter Property="Height" Value="20" />
            <Setter Property="Width" Value="20" />
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="CornerRadius" Value="10" />
        </Style>

        <BooleanToVisibilityConverter x:Key="B2VConverter" />

    </Application.Resources>
</Application>
