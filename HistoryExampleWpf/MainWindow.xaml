<Window x:Class="HistoryExampleWpf.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HistoryExampleWpf" xmlns:controls="clr-namespace:HistoryExampleWpf.Controls"
        mc:Ignorable="d" DataContext="{x:Static local:App.ViewModel}" Title="MainWindow" Height="600" Width="800"
        Icon="AppIcon.png">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="20 0" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.2*" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <controls:MainControl Grid.Row="0" Grid.Column="0" />

        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <controls:WorkingControl Grid.Row="0" />
            <UniformGrid Grid.Row="1" Columns="2">
                <controls:L2PreparingControl />
                <controls:L2WorkingControl />
            </UniformGrid>
        </Grid>
        <UniformGrid Grid.Row="0" Grid.Column="1" Columns="1">
            <Button Content="Send 'N'" Command="{Binding TriggerCommand}" CommandParameter="N" />
            <Button Content="Send 'B'" Command="{Binding TriggerCommand}" CommandParameter="B" />
            <Button Content="Send 'C'" Command="{Binding TriggerCommand}" CommandParameter="C" />
            <Button Content="Send 'D'" Command="{Binding TriggerCommand}" CommandParameter="D" />
            <Button Content="Send 'R'" Command="{Binding TriggerCommand}" CommandParameter="R" />
            <Button Content="Restart" Command="{Binding RestartCommand}" />
        </UniformGrid>
    </Grid>
</Window>